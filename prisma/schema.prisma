// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Post {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  size String? 
  polivalente Boolean @default(false)
  polivalente2 Boolean @default(false)
  polivalente_refuerzo Boolean @default(false)
  rabia Boolean @default(false)
  age String?
  createAt Int
  location String
  contact String
  email String
  user String
  image String?
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  favs String[] @default([])
}
